<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Estres">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#CC000000"
        android:textSize="25sp"
        android:text="Tu guía de Salud y Bienestar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#CC000000"
        android:textSize="24sp"
        android:text="Encuentra enlaces a videos que te ofrecen técnicas de relajación y más."/>



    <Button
        android:id="@+id/buttonConsejos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonConsejos"
        android:text="Consejos"
        android:layout_marginTop="26dp"/>
    <Button
        android:id="@+id/buttonFrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonFrases"
        android:text="Frases"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/buttonEnlacesavideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonEnlacesavideos"
        android:text="Enlaces a Videos"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        app:srcCompat="@mipmap/imageen" />


</LinearLayout>