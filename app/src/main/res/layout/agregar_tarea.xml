<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AgregarTareaActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- things to scroll -->
            <EditText
                android:id="@+id/editTextTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa una tarea"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />
            <Spinner
                android:id="@+id/spinnerColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:entries="@array/colors_array"
                android:prompt="@string/select_color_prompt" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idTvSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Fecha"
                    android:textSize="18dp"/>
                <Button
                    android:id="@+id/idBtnPickDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/editTextTarea"
                    android:text="Elegir"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/idTVSelectedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/idBtnPickTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Elegir"
                    android:textAllCaps="false" />

            </LinearLayout>



            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarView"
                android:layout_centerInParent="true"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="16dp"
                android:text="Guardar Tarea" />

        </LinearLayout>



</RelativeLayout>
